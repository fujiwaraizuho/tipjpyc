{
	"compilerOptions": {
    	"module": "commonjs",
    	"target": "esnext",
    	"noImplicitAny": false,
    	"sourceMap": true,
    	"outDir": "build",
		"strict": true,
    	"emitDecoratorMetadata": true,
    	"experimentalDecorators": true,
    	"importHelpers": true,
    	"forceConsistentCasingInFileNames": true,
      	"lib": [
        	"esnext",
        	"esnext.asynciterable"
      	],
      	"moduleResolution": "node",
      	"resolveJsonModule": true
    },
    "exclude": [
      	"node_modules"
    ]
}
